{
    "compilerOptions": {
      "target": "ES6",
      "module": "ESNext",
      "lib": ["DOM", "DOM.Iterable", "ESNext"],
      "allowJs": true,                  // âœ… allows JS files
      "checkJs": false,                 // set true if you want to type-check JS files
      "jsx": "react-jsx",               // or "react" for older versions
      "moduleResolution": "node",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noEmit": true,                   // avoids emitting .js files
      "forceConsistentCasingInFileNames": true,
      "strict": true,                   // strict type checking
      "skipLibCheck": true,              // faster builds by skipping lib checks
      "baseUrl": ".",
      "paths": {
        "@/*": ["src/*"]
      }
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
  }
  